<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml" fx:controller="ca.zoltar.gui.controller.ResultsViewController" spacing="10">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Evaluation Results" styleClass="section-title"/>

    <HBox spacing="10">
        <Label text="Filter by:"/>
        <ComboBox fx:id="labelFilter" promptText="Novelty Label"/>
        <ComboBox fx:id="topicFilter" promptText="Topic"/>
        <Button text="Clear Filters" onAction="#handleClearFilters"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Export CSV" onAction="#handleExportCsv"/>
        <Button text="Export JSON" onAction="#handleExportJson"/>
    </HBox>

    <SplitPane orientation="VERTICAL" VBox.vgrow="ALWAYS">
        <!-- Results table -->
        <TableView fx:id="resultsTable" SplitPane.resizableWithParent="true">
            <columns>
                <TableColumn fx:id="dateColumn" text="Date" prefWidth="150"/>
                <TableColumn fx:id="topicColumn" text="Topic" prefWidth="150"/>
                <TableColumn fx:id="pmidColumn" text="PMID" prefWidth="100"/>
                <TableColumn fx:id="titleColumn" text="Title" prefWidth="300"/>
                <TableColumn fx:id="labelColumn" text="Label" prefWidth="100"/>
                <TableColumn fx:id="scoreColumn" text="Score" prefWidth="80"/>
            </columns>
            <placeholder>
                <Label text="No evaluation results found"/>
            </placeholder>
        </TableView>

        <!-- Detail pane -->
        <VBox spacing="10" SplitPane.resizableWithParent="false">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Details" styleClass="field-label"/>
            <TextArea fx:id="detailArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS"/>
        </VBox>
    </SplitPane>

</VBox>
